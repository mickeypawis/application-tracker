<% layout('layouts/boilerplate')%>

    <div class="row">
        <div class="col-6">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= application.companyName%>
                    </h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= application.submittedDate%>
                    </li>
                    <li class="list-group-item">
                        Status: <%= application.status%>
                    </li>
                </ul>
                <div class="card-footer text-muted">
                    2 days ago
                </div>
            </div>
        </div>
        <div class="col-6 ">
            <h2>Recap</h2>
            <% for(let recap of application.recaps) { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">Created At :<%= recap.createdAt %>
                        </h6>
                        <p class="card-text">Review: <%=recap.body %>
                        </p>

                        <form action="/applications/<%=application._id%>/recaps/<%=recap._id%>?_method=DELETE"
                            method="POST">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
                <% } %>
                    <form action="/applications/<%=application._id%>/recaps" method="POST" class="mb-3">
                        <div class="mb-3">
                            <label class="form-label" for="body">Add the recap</label>
                            <textarea class="form-control" name="recap[body]" id="body" cols="30" rows="3"></textarea>
                            <!-- <div class="valid-feedback">
                        Looks good!
                    </div> -->
                        </div>
                        <button class="btn btn-success">Submit</button>
                    </form>
        </div>
    </div>