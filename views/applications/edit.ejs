<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Application</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/applications/<%=application._id%>?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="companyName">Company Name:</label>
                    <input class="form-control" type="text" id="companyName" name="application[companyName]" value="<%=application.companyName %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="submittedDate">Submitted Date:</label>
                    <input id="submittedDate" class="form-control" type="date" name="application[submittedDate]" value="<%=application.submittedDate %>" required/>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="status">Status:</label>
                    <select class="form-select" aria-label="Default select example" name="application[status]" id="status"required>
                        <% if (application.status === "Pending"){ %>
                            <option selected value="Pending">Pending</option>
                            <option value="Accept">Accept</option>
                            <option value="Reject">Reject</option>
                        <% } %>
                        <% if (application.status === "Accept"){ %>
                            <option value="Pending">Pending</option>
                            <option selected value="Accept">Accept</option>
                            <option value="Reject">Reject</option>
                        <% } %>
                        <% if (application.status === "Reject"){ %>
                            <option value="Pending">Pending</option>
                            <option value="Accept">Accept</option>
                            <option selected value="Reject">Reject</option>
                        <% } %>
                    </select>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Edit Application</button>
                </div>
            </form>
            <a href="/applications">All Applications</a>
        </div>
    </div>

<script>
     // Example starter JavaScript for disabling form submissions if there are invalid fields
 (() => {
    'use strict'
  
    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    const forms = document.querySelectorAll('.validated-form')
  
    // Loop over them and prevent submission
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }
  
        form.classList.add('was-validated')
      }, false)
    })
  })()
</script>